{{!-- Modal Trigger --}}
<a class="waves-effect waves-light btn modal-trigger btn-large waves-effect grey darken-2" href="#signUpModal">Sign Up</a>

{{!-- Modal Structure --}}
<div id="signUpModal" class="modal">
    <div class="right">
        <a href="#!" class="modal-close waves-effect waves-green btn-flat"><i class="material-icons">clear</i></a>
    </div>
    <div class="modal-content center">
        <h5>Start sharing your stories,</h5>
        <h3>Sign Up Today!</h3>
        <hr>
    </div>

    <div class="container">
        <form id="signup" class="row" name="signup" method="post" action="/signup">
            {{!-- name --}}
            <div class="input-field col s12">
                <i class="material-icons prefix">account_circle</i>
                <input id="nameInput" type="text" name="name" class="validate" required>
                <label for="nameInput"> Name</label>
            </div>
            {{!-- email --}}
            <div class="input-field col s12">
                <i class="material-icons prefix">email</i>
                <input id="emailInput" type="email" name="email" class="validate" required>
                <label for="emailInput"> Email</label>
            </div>
            {{!-- username --}}
            <div class="input-field col s6">
                <i class="material-icons prefix">verified_user</i>
                <input id="usernameInput" type="text" name="username" class="validate" required>
                <label for="usernameInput"> Username</label>
                {{!-- <span class="helper-text" data-error="wrong" data-success="right">Helper text</span> --}}
            </div>
            {{!-- password --}}
            <div class="input-field col s6">
                <i class="material-icons prefix">fingerprint</i>
                <input id="passwordInput" type="password" name="password" class="validate" required>
                <label for="passwordInput"> Password</label>
            </div>
            {{!-- submit button --}}
            <div class="col s12 center">
                <input class="btn btn-primary btn-large" type="submit" value="Sign Up" />
            </div>
        </form>

        {{!-- link to login --}}
        <div class="center row">
            <p id="loginLink">Already have an account? <a href="/signin">Login here!</a></p>
        </div>
    </div>
</div>

{{!-- jquery Script --}}
<script>
    $(document).ready(function () {

        $('.modal').modal();
    });

</script>